@app.route(API_PREFIX + '/export/<string:module>', methods=['GET'])
def export_module(module):
    """Export module data to Excel"""
    try:
        model_map = {
            'contacts': Contact,
            'accounts': Account,
            'pipelines': Pipeline,
            'calls': Call,
            'events': Event,
            'tasks': Task,
            'notes': Note
        }

        model = model_map.get(module.lower())
        if not model:
            return jsonify({'error': 'unknown module'}), 404

        records = model.query.all()
        data_list = [r.to_dict() for r in records]

        for item in data_list:
            if 'data' in item:
                del item['data']

        df = pd.DataFrame(data_list)

        output = io.BytesIO()
        with pd.ExcelWriter(output, engine='openpyxl') as writer:
            df.to_excel(writer, index=False, sheet_name=module.capitalize())
        output.seek(0)

        filename = f'{module}_{datetime.now().strftime("%Y%m%d_%H%M%S")}.xlsx'

        return send_file(
            output,
            mimetype='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
            as_attachment=True,
            download_name=filename
        )
    except Exception as e:
        return jsonify({'error': str(e)}), 500


